{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "commonjs",
        "target": "es3",
        "declaration": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "lib": ["esnext"],
        "experimentalDecorators": true,
        "paths": {
            "*": ["@types/*"]
        },
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*","@types/*"],
    "exclude": ["./src/lib/*"]
}